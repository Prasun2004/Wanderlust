<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">
    <h1 class="col-8 offset-2"> signup form </h1>
    <div class="col-8 offset-2">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">username</lable>
                <input name="username" placeholder="enter username" id="username" type="text" class="form-control" required/>
              </div>
              <div class="valid-feedback"> right title</div>
              <div class="mb-3">
                <lable for="email" class="form-label">email</lable>
                <input name="email" placeholder="enter email id" id="email" type="email" class="form-control" required/>
              </div>
              <div class="valid-feedback"> right title</div>
              <div class="mb-3">
                <lable for="password" class="form-label">password</lable>
                <input name="password" placeholder="enter password" id="password" type="password" class="form-control" required/>
              </div>
              <div class="valid-feedback"> right title</div>
              <button class="btn btn-success"> signup</button>
        </form>
    </div>
  </div>